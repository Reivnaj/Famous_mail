<div class="btn btn-secondary btn-lg mt-5 ml-2">
  <%=  link_to 'Recevoir un mail', new_email_path, remote: true %>
</div>

<div class="d-flex flex-row mt-5">

    <table class="table table-hover ml-2 col-2" id="emails">
          <tbody>
            <tr class="table-dark">
              <th>Liste des emails</th>
            </tr>
              <% @emails.each do |email|%>
              <tr class="table-dark email">
                <td><%= link_to email.object, email_path(email), remote: true%></td>
              </tr>
              <% end %>
          </tbody>
    </table>


  <table class="table table-hover mr-2 col-6">
    <tbody>
      <tr class="table-active">
        <th>Email sélectionné</th>
      </tr>
      <tr class="table-active">
        <td>
          <h1 id="email-object"></h1>
          <p id="email-body"></p>
        </td>

      </tr>

    </tbody>
  </table>

</div>
